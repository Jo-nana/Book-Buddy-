<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-login">
        <h1>Log in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%= f.hidden_field :book, value: params[:book] %>

          <!--
          If book is present (e.g. passed as URL parameter or as variable); then redirect to show of book
          -->


          <p id="small-text-form">Not registered yet ? <%= link_to "Create an account", new_user_registration_path %></p>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-form" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
