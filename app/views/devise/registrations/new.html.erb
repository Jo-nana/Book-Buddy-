<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-login-register">
        <h1>Sign up</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="row">
              <div class="form-inputs">
                <div class="row">
                  <div class="col-6 mb-1">
                    <%= f.input :first_name,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "first name", class: "style-input"},
                                label_html: { class: "label-form" }%>
                  </div>
                  <div class="col-6 mb-1">
                    <%= f.input :last_name,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "last name", class: "style-input"},
                                label_html: { class: "label-form" }%>
                  </div>
                <%= f.input :username,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "username", class: "style-input"},
                            label_html: { class: "label-form" }%>
                </div>
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "style-input"},
                            label_html: { class: "label-form" }%>
                <%= f.input :address,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "tags", class: "style-input"},
                            label_html: { class: "label-form" }%>
                <%= f.input :tags,
                            required: true,
                            autofocus: true,
                            collection: ["Horror", "S-F", "Distopia", "Classic", "Adventure", "Fantasy"], as: :check_boxes,
                            input_html: { class: "tag-selector" },
                            item_wrapper_class: 'tag-item'%>
                <div class="row">
                  <div class="col-6 mb-1">
                    <%= f.input :password,
                                required: true,
                                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                input_html: { autocomplete: "new-password", class: "style-input" },
                                label_html: { class: "label-form" },
                                hint_html: { class: "hint-font" }%>

                  </div>
                  <div class="col-6 mb-1">
                    <%= f.input :password_confirmation,
                                required: true,
                                label: "Confirmation",
                                input_html: { autocomplete: "new-password", class: "style-input" },
                                label_html: { class: "label-form" } %>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn-form"%>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
