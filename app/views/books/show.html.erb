<div class="container pt-3">
  <div class="arrow-left-show">
    <%= link_to books_path do %>
      <i data-feather="arrow-left"></i>
    <% end %>
  </div>
  <div>
    <h1><%= @book.title %></h1>
    <h2><%= @book.author %></h2>
    <p>Owner: <%= @book.user.username %></p>
  </div>
  <div class="container-show">
    <div>
      <h4><%= @book.title %></h4>
      <p><%= @book.description %></p>
    </div>
    <%= image_tag(@book.picture) %>
    <div>
      <p>Chats</p>
      <p>Map</p>
    </div>
  </div>
</div>
