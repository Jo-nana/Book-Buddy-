<div class="cards">
  <% @books.each do |b| %>
    <%= link_to book_path(b) do %>
      <div class="card-product">
        <%= cl_image_tag(b.photo.key)%>
        <div class="card-product-infos">
          <div>
            <h2><%= b.title %></h2>
            <p><%= b.author %></p>
            <p><%= b.year %></p>
          </div>
          <div class="card-price-km">
            <h3><% b.tags.each do |tag| %>
                  <%= tag %>
                <% end %>
            </h3>
            <h3>1.3 km</h3>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
